<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Centrabaho.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Centrabaho.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Centrabaho">

    <ShellContent
        Title="HomePage"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="homepage" />

    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="loginpage" />

    <ShellContent
        Title="RegisterPage"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="registerpage" />

    <ShellContent
        Title="CreatePostPage"
        ContentTemplate="{DataTemplate local:CreatePostPage}"
        Route="createpostpage"/>

    <ShellContent
        Title="AdminPage"
        ContentTemplate="{DataTemplate local:AdminPage}"
        Route="adminpage"/>

    <ShellContent
        Title="PostDetailsPage"
        ContentTemplate="{DataTemplate local:PostDetailsPage}"
        Route="postdetailspage"/>

</Shell>
