<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Centrabaho.ViewModels"
             x:Class="Centrabaho.Views.CreatePostPage"
             Shell.NavBarIsVisible="False"
             Title="CreatePostPage">
    <ContentPage.BindingContext>
        <local:CreatePostViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" Spacing="15" Padding="20">
            
            <Entry Placeholder="Title"
                   Text="{Binding Title}" 
                   FontSize="Title"/>

            <Editor Placeholder="Description"
                    Text="{Binding Description}"
                    MinimumHeightRequest="100"
                    AutoSize="TextChanges" />

            <Button Text="Create Post"
                    Command="{Binding CreatePostCommand}"
                    Clicked="createPostBtn_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>