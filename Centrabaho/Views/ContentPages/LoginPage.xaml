<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Centrabaho.Views.ContentPages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout VerticalOptions="Center">
        
        <Entry Placeholder="Username" Text="{Binding MyLoginRequestModel.UserName}">
        </Entry>

        <Entry Placeholder="Password" Text="{Binding MyLoginRequestModel.Password}">
        </Entry>

        <Button Text="Login" BackgroundColor="Black" TextColor="White" Command="{Binding LoginCommand}"/>


    </VerticalStackLayout>
</ContentPage>