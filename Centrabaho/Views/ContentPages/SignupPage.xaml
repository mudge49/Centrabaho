<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible = "False"
             xmlns:signupfeature="clr-namespace:Centrabaho.Views.ContentViews"
             x:Class="Centrabaho.Views.ContentPages.SignUpPage"
             Title="SignUpPage">
    <VerticalStackLayout Padding="25"
                         MaximumWidthRequest="800">

        <Label FontSize="Large"
               Text="Sign Up"/>
        <signupfeature:SignUpView Margin="0,25,0,0" BindingContext="{Binding SignUpFormViewModel}" />
    </VerticalStackLayout>
</ContentPage>